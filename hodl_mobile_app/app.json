{
  "expo": {
    "name": "hodl_mobile_app",
    "slug": "hodl_mobile_app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hodlproject.hodlapp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.hodlproject.hodlapp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "hodlapp",
    "packagerOpts": {
      "config": "metro.config.js",
      "sourceExts": [
        "expo.ts",
        "expo.tsx",
        "expo.js",
        "expo.jsx",
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "wasm",
        "svg"
      ]
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./local/path/to/your/notification-icon.png",
          "color": "#ffffff",
          "sounds": [
            "./local/path/to/your/notification-sound.wav",
            "./local/path/to/your/notification-sound-other.wav"
          ]
        }
      ]
    ],
    "entryPoint": "./index.js"
  }
}
